<!DOCTYPE html>
<html>
<head>
  <title>TestTask</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <style type="text/css">
    body {
      background-color: #e5e5e5;
    }

    header {
      box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.1);
    }

    .form {
      background-color: #f7f7f9;
      margin: 30px auto;
      max-width: 1000px;
      padding: 20px;
      text-shadow: none;
      border-radius: 4px;
      box-shadow: 0px 3px 5px 0px rgba(0, 0, 0, 0.31);
    }

    .form.form-small {
      max-width: 400px;
    }

    .title {
      color: rgba(0, 0, 0, 0.8);
      font-size: 22px;
      text-align: start;
      margin-bottom: 15px;
      border-bottom: 1px solid #d7d7d9;
      padding-bottom: 10px;
    }

    .form-group br {
      display: none;
    }

    .field_with_errors > input {
      border-color: red;
    }

    .form-tolip {
      text-align: center;
      margin: 5px 0;
    }
    .form-tolip {
      text-align: center;
      margin: 5px 0;
    }
  </style>
</head>

<body>
<header>
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">Home page</a>
    <% if current_user %>
      <ul class="navbar-nav mr-auto" style="flex-direction: row; width: 20%;max-width: 220px; justify-content: space-around;">
        <li class="nav-item active">
          <a class="nav-link" href="/stocks/new">
            Add stock
          </a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/stocks">
            View stock list
          </a>
        </li>
      </ul>
    <% end %>

    <form class="form-inline">
      <div style="padding-left: 10px; display: flex;">
        <% if current_user %>
          <a class="nav-link" href="/signout" role="button">
            Sign Out
          </a>
        <% else %>
          <a class="nav-link" href="/signup" role="button">
            Sign Up
          </a>
          <a class="nav-link" href="/signin" role="button">
            Sign In
          </a>
        <% end %>
      </div>
    </form>
  </nav>
</header>
<%= yield %>
</body>
</html>
